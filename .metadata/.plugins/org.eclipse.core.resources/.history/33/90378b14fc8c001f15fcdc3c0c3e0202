package java004_butterfly_pattern;

public class Butterfly_Pattern {

	public static void main(String[] args) {
		
		int n=4;
		for(int rows=1; rows<=n; rows++) {
			System.out.print("*");
		}
		for(int cols=1; cols<=2*(n-rows); cols++) {
			System.out.print(" ");
		}
		
		System.out.println();
	}

}
